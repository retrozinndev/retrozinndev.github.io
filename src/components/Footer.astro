---
import { FaHeart } from "react-icons/fa6";
import { useTranslations } from "../i18n/utils";
import LinkButton from "./LinkButton.astro";

const tr = useTranslations(Astro.params.lang || "en");
const { DEV } = import.meta.env;
---

<footer class="footer">
    { tr("footer.txt1") } <FaHeart size={10} /> { tr("footer.txt2") } Â· <LinkButton 
        external spacing={false} href="https://github.com/retrozinndev/retrozinn.dev"
    >{ tr("footer.txt3") }</LinkButton>
    <br>
    { DEV && "development*" }
</footer>

<style lang="scss">

    @use "../styles/colors";

    .footer {
        margin-top: 64px;
        overflow: hidden;
        display: block;
        width: 100%;
        font-family: Free Sans, Open Sans, Segoe UI Alternative, Segoe UI, sans-serif;
        font-size: 13px;
        text-align: center;
        padding-block: 10px;
    } 

    body.dark a,
    body.dark .footer {
        color: lightgray;
    }

    body.light a,
    body.light .footer {
        color: gray;
    }
</style>
